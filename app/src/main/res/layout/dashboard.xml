<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFDA">
    <LinearLayout
        android:id="@+id/logoMahasiswa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/student1"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="150dp"
            />
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/lihatData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/logoMahasiswa"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        >
        <ImageButton
            android:id="@+id/btn_lat23"
            android:layout_marginTop="30dp"
            android:layout_width="250dp"
            android:layout_height="70dp"
            android:background="@drawable/stylebutton1"
            />
        <TextView
            android:layout_marginLeft="75dp"
            android:layout_marginTop="45dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lihat Data"
            android:textStyle="bold"
            android:textColor="#fff"
            android:textSize="30dp"
            />
        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_marginTop="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_archive_black_24dp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/inputData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/lihatData"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        >
        <ImageButton
            android:id="@+id/btn_lat2"
            android:layout_marginTop="30dp"
            android:layout_width="250dp"
            android:layout_height="70dp"
            android:background="@drawable/stylebutton2"
            />
        <TextView
            android:layout_marginLeft="75dp"
            android:layout_marginTop="45dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="InputData"
            android:textStyle="bold"
            android:textColor="#fff"
            android:textSize="30dp"
            />
        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_marginTop="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_add_box_black_24dp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/inputData"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        >
        <ImageButton
            android:layout_marginTop="30dp"
            android:layout_width="250dp"
            android:layout_height="70dp"
            android:background="@drawable/stylebutton3"
            />
        <TextView
            android:layout_marginLeft="75dp"
            android:layout_marginTop="45dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Informasi"
            android:textStyle="bold"
            android:textColor="#fff"
            android:textSize="30dp"
            />
        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_marginTop="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_info_black_24dp"
            />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
