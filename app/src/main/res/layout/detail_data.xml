<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="20dp"
    android:background="#F7DFB1"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/student1"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/ll_no"
        android:layout_marginBottom="20dp"
        />

    <LinearLayout
        android:layout_above="@id/ll_nama"
        android:id="@+id/ll_no"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No"
            />
        <EditText
            android:id="@+id/detailNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="No"
            android:drawableLeft="@drawable/ic_create_black_24dp"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_nama"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nama"
            />
        <EditText
            android:id="@+id/detailNama"
            android:hint="Nama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_group_black_24dp"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_below="@id/ll_nama"
        android:id="@+id/ll_tgl_lahir"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tanggal Lahir"
            />
        <EditText
            android:id="@+id/detailTanggal"
            android:layout_width="match_parent"
            android:inputType="date"
            android:layout_height="wrap_content"
            android:hint="dd/mm/yyyy"
            android:drawableLeft="@drawable/ic_date_range_black_24dp"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_below="@id/ll_tgl_lahir"
        android:id="@+id/ll_jenkel"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Jenis Kelamin"
            />
        <EditText
            android:id="@+id/detailJk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="L/P"
            android:drawableLeft="@drawable/ic_person_black_24dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_below="@id/ll_jenkel"
        android:id="@+id/ll_alamat"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Alamat"
            />
        <EditText
            android:id="@+id/detailAlamat"
            android:hint="Alamat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_place_black_24dp"
            />

    </LinearLayout>

</RelativeLayout>